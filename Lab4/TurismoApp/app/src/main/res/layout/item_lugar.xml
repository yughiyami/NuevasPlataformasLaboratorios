<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen del Lugar -->
        <ImageView
            android:id="@+id/ivImagenLugar"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/imagen_lugar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón Favorito -->
        <ImageButton
            android:id="@+id/btnFavoritoLugar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            android:src="@drawable/ic_favorite_border"
            android:background="@drawable/bg_circle_white"
            android:contentDescription="@string/agregar_favorito"
            app:layout_constraintTop_toTopOf="@id/ivImagenLugar"
            app:layout_constraintEnd_toEndOf="@id/ivImagenLugar" />

        <!-- Contenedor de Información -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/ivImagenLugar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Nombre del Lugar -->
            <TextView
                android:id="@+id/tvNombreLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nombre_lugar"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/tvDescripcionLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/descripcion_lugar"
                android:textSize="14sp"
                android:textColor="@color/colorTextSecondary"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Precio y Categorías -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvPrecioLugar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/precio"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvCategoriasLugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/categorias"
                    android:textSize="12sp"
                    android:textColor="@color/colorTextSecondary" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>