<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CatedralFragment"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Catedral de Arequipa"
        android:textColor="#1E7A9A"
        android:textSize="28sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            android:src="@drawable/images" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:text="La Catedral de Arequipa es uno de los monumentos religiosos más importantes del Perú. Fue construida con ignimbrita, una piedra de origen volcánico, y lavas de los ladrillos.\n\nEs el santuario principal de la ciudad, ocupando todo el lado norte de la Plaza de Armas. Construida totalmente en sillar, desde su altar, donde se rinde homenaje a Santa María.\n\nEstá considerada como monumento religioso de influencia gótica. Su fachada está construida por setenta columnas con capiteles corintios, tres portadas y dos grandes arcos laterales.\n\nEstá rematada por dos altas torres neorrománicas y estiliarias. Su interior alberga importantes obras de arte y un valioso órgano belga."
            android:textColor="#333333"
            android:textSize="16sp" />
    </ScrollView>

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1E7A9A"
        android:text="Volver"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>